{
  "compilerOptions": {
    "jsx": "react", //tells compiler to convert JSX into React.createElement calls
    "module": "CommonJS",
    "esModuleInterop": true, //ensures interoperabilities between ES modules and other module systems
    "noImplicitAny": true, //This does not allow variables with an implicit 'any' type
    "outDir": "./dist/", //output directory for compiled Javascript files
    "target": "ES6", // sets JS version that that TypeScript code will be compiled to
    "moduleResolution": "node" //this tells Typescript to mimic Node.js module resolution strategy
  },
  "include": ["src/**/*"], //this tells typescript to include all TS files in 'src' directory and subdirectories
  "exclude": ["node_modules"] //this tells TS to exclude the node_modules directory
}